<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    android:padding="16dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       >
       <include layout="@layout/item_movie_card" android:id="@+id/movie_image_BS"/>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="8dp"
           android:orientation="vertical"
           >
           <TextView
               android:id="@+id/movie_name_BS"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:text="Peaky Bilders"
               android:textStyle="bold"
               android:textSize="20sp"
               android:textColor="@color/white"
               />
           <TextView
               android:id="@+id/movie_details_BS"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               tools:text="2022 A 6 seasons"
               android:textSize="14sp"
               android:textColor="@color/textField_grey"
               />
           <TextView
               android:id="@+id/movie_about_BS"
               android:layout_width="wrap_content"
               android:layout_height="100dp"
               tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Quisque finibus tortor quis justo ultrices viverra. Fusce rutrum, lectus sit amet accumsan malesuada, quam nibh sodales magna"
               android:textSize="16sp"
               android:ellipsize="end"
               android:textColor="@color/white"
               />
       </LinearLayout>

   </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/play_BS"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/ic_baseline_play_arrow_24"

            app:iconSize="20dp"


            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            />
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/download_BS"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/ic_baseline_arrow_downward_24"

            app:iconSize="20dp"


            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            />
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/share_BS"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/Widget.MaterialComponents.Button.Icon"
            app:icon="@drawable/ic_baseline_share_24"

            app:iconSize="20dp"


            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded"
            />
        <Space
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    </LinearLayout>
</LinearLayout>
